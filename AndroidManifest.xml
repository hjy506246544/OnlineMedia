<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gvs.onlinemedia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gvs.onlinemedia.activity.MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 在线音乐 -->
        <activity
            android:name="com.gvs.onlinemedia.activity.OnlineMusicActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
        </activity>
        <!-- 在线影院 -->
        <activity
            android:name="com.gvs.onlinemedia.activity.OnlineCinemaActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
        </activity>
        <!-- 在线FM -->
        <activity
            android:name="com.gvs.onlinemedia.activity.OnlineFMActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
